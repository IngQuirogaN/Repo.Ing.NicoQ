<main className="main_contacto">
    <div className="formulario_contacto">
        <div>
            <h4>Modificar el producto</h4>
            <form action="/admin/administrador/modificar" method="post" class="formulario"
                enctype="multipart/form-data">

                <input type="hidden" value="{{producto.id}}" name="id">
                <div>
                    <label for="tipo">Tipo</label>
                    <input type="text" name="tipo" value="{{producto.tipo}}" />
                </div>

                <div>
                    <label for="clase">Clase</label>
                    <input type="text" name="clase" value="{{producto.clase}}" />
                </div>
                <div>
                    <label for="cuerpo">Descripcion</label>
                    <textarea name="cuerpo" id="" cols="30" rows="10">{{producto.cuerpo}}</textarea>

                </div>
                <div>
                    <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen" /></label>
                </div>
                <div>
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen
                        actual?</label>
                    <input type="hidden" name="img_original" value="{{producto.img_id}}">
                </div>
                <div>
                    <button type="submit">Guardar</button>
                </div>
            </form>
            {{#if error}}
            <p>{{mensaje}}</p>
            {{/if}}


        </div>
    </div>
</main>